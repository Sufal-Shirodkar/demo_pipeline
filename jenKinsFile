pipeline {
    agent any

    tools {
        maven 'MAVEN_HOME'    // ðŸ‘ˆ must exactly match the name you gave under "Manage Jenkins â†’ Tools"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Sufal-Shirodkar/demo_pipeline.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
    }

    post {
        success {
            echo 'Pipeline executed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
