pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                // Since Jenkins already checks out the Jenkinsfile (as shown in your log), 
                // this explicit 'git' step is often redundant and can be removed 
                // unless you need a different repository or branch.
                git 'https://github.com/Sufal-Shirodkar/demo_pipeline.git'
            }
        }

        stage('Build') {
            steps {
                // Use Maven to build your project
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                // Run tests if applicable
                sh 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                // ADDED a step here to fix the "No steps specified" error.
                echo 'Deployment stage complete (Placeholder).' 
                // Example: sh 'mvn deploy'
            }
        }
    }

    post {

        success {
            // This block will be executed if the pipeline runs successfully
            echo 'Pipeline executed successfully!'
        }

        failure {
            // This block will be executed if the pipeline fails
            echo 'Pipeline failed!'
        }
    }
}